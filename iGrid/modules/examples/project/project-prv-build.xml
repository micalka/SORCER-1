<project name="Partner Account" default="all" basedir=".">
	<property name="module.name" value="project" />
	<property name="module.run.dir" value="project" />

	<!-- set global properties -->
	<import file="../../../modules/common-build.xml" />
	<property name="src" value="./src" />
	<property name="resources" value="./resources" />

	<!-- The sources to compile -->
	<patternset id="ant.java">
		<include name="sorcer/project/**/*.java" />
		<exclude name="**/SAVE/*.java" />
		<exclude name="**/BAK/*.java" />
	</patternset>

	<patternset id="ant.classes">
		<include name="sorcer/provider/**/*.class" />
	</patternset>
	
	<patternset id="ant.jars">
		<include name="RandomNumProvider.jar" />
		<include name="AverageProvider.jar"/>
		<include name="CosinusProvider.jar"/>
		</patternset>

	<path id="project.classpath">
		<pathelement location="${classes}" />
		<pathelement location="${sorcer.lib}/sorcer.jar" />
		<pathelement location="${support.lib}/junit.jar" />
		<path refid="jini.path" />
		<path refid="rio.path" />
	</path>

	<path id="javadocs.classpath">
		<pathelement location="${common.lib}/rio/serviceui-1.1a.jar" />
		<pathelement location="${common.lib}rio//ant-ext.jar" />
		<pathelement location="${ant.home}/lib/ant.jar" />
	</path>
	
	<!-- No RMI stubs are required for JERI type of providers -->
		<target name="compile" depends="compileSources" />
		<target name="jars" depends="project, copy-run-prv-files" />
		<target name="project" depends="RandomNumProvider.jar, AverageProvider.jar, CosinusProvider.jar" />
		<target name="all" depends="compile, jars" />
	
	<target name="RandomNumProvider.jar">
			<classdepandjar jarfile="${sorcer.lib}/RandomNumProvider.jar" files="true">
				<classpath refid="project.classpath" />
				<in name="sorcer.project.provider" />
				<topclass name="sorcer.project.provider.RandomNumProvider" />
				<topclass name="sorcer.project.provider.RandomNum" />
				<fileset dir="${iGrid.home}/configs" includes="sorcer/util/sorcer.env" />
			</classdepandjar>
		</target>
		<target name="AverageProvider.jar">
			<classdepandjar jarfile="${sorcer.lib}/AverageProvider.jar" files="true">
				<classpath refid="project.classpath" />
				<in name="sorcer.project.provider" />
				<topclass name="sorcer.project.provider.AverageProvider" />
				<topclass name="sorcer.project.provider.Average" />
				<fileset dir="${iGrid.home}/configs" includes="sorcer/util/sorcer.env" />
			</classdepandjar>
		</target>
	<target name="CosinusProvider.jar">
		<classdepandjar jarfile="${sorcer.lib}/CosinusProvider.jar" files="true">
			<classpath refid="project.classpath" />
			<in name="sorcer.project.provider" />
			<topclass name="sorcer.project.provider.CosinusProvider" />
			<topclass name="sorcer.project.provider.Cosinus" />
			<fileset dir="${iGrid.home}/configs" includes="sorcer/util/sorcer.env" />
		</classdepandjar>
	</target>
	
	<target name="copy-run-prv-files">
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/configs" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/policy" />
		<mkdir dir="${iGrid.home}/bin/examples/${module.run.dir}/logs" />
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/configs">
			<fileset dir="configs">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/bin">
			<fileset dir="bin">
				<include name="*" />
			</fileset>
		</copy>
		<copy todir="${iGrid.home}/bin/examples/${module.run.dir}/policy">
			<fileset dir="policy">
				<include name="*" />
			</fileset>
		</copy>
		<chmod dir="${iGrid.home}/bin/examples/${module.run.dir}/bin" perm="755" includes="*.sh" />
	</target>

</project>
